<div id="home">
  <div class="container">
    {{#if user}}
    <div>
      <div class="col-8 offset-2">
        <h1>Welcome {{user.username}}, to The Blog Spot!</h1>
        <h2>Post a blog here:</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="blog-title">Blog Title:</label>
            <input type="text" id="blog-title" class="form-control" aria-describedby="blog-title" placeholder="Enter blog title">
          </div>
          <div class="form-group">
            <label for="blog-content">Blog Content:</label>
            <textarea class="form-control" id="blog-content" aria-describedby="blog-content" placeholder="Enter blog content"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        {{!--Add Author Slot --}}
        <h3>Your Blogs:</h3>
        <ul id="blog-list" class="list-group">
        
        </ul>
      </div>
    </div>
    {{else}}
    <div class="row">
      <div class="col-8 m-auto">
      <h2>Create Account Here!</h2>
      {{>create}}
      </div>
    </div>
    {{/if}}

  </div>
</div>
</div>
</div>